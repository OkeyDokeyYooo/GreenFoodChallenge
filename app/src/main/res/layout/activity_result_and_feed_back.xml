    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/print_calculation_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/result_header1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TotalCO2e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TotalCO2e"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/print_calculation_result2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/result_header2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/print_estimate_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal"
                android:text="@string/result_header3"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalCO2eSavings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="totalCO2eSavings"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/print_calculation_result3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/result_header2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/print_estimate_change2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal"
                android:text="@string/result_header4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalCityCO2eSavings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="totalCityCO2eSavings"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/print_calculation_result4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/result_header5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CO2eSavingsTrees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/print_calculation_result7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/result_header6"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CO2eSavingsMiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/print_calculation_result6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/result_header7"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CO2eSavingsGas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/print_calculation_result8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/result_header8"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/back_to_food_select_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="DONE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/darkgray"/>

            <Button
                android:id="@+id/buttonFB"
                android:layout_width="44dp"
                android:layout_height="50dp"
                android:text="LINK" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightgray"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Recommend Recipe"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/recipe_recommend_picture_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/recipe_recommend_name_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recipe_recommend_recipe_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"

                />

        </LinearLayout>
    </ScrollView>




</LinearLayout>